# ~/.config/skhd/skhdrc

# start and stop
ctrl + alt - q : yabai --stop-service
ctrl + alt - r : yabai --restart-service
ctrl + alt - s : yabai --start-service

# changing window focus
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - l : yabai -m window --focus east

#change focus between external displays (left and right)
alt - s: yabai -m display --focus west
alt - g: yabai -m display --focus east

# Move the focused window to the next display
ctrl + alt - n: yabai -m window --display next
ctrl + alt - p: yabai -m window --display prev

# rotate layout clockwise
shift + alt - c : yabai -m space --rotate 270

# rotate layout anti-clockwise
shift + alt - a : yabai -m space --rotate 270

# flip alone x-axis
shift + alt - x : yabai -m space -- mirror x-axis

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# reset window size
shift + alt - e : yabai -m space --balance

# Move app to space
ctrl + alt + shift - 1 : yabai -m window --space 1
ctrl + alt + shift - 2 : yabai -m window --space 2
ctrl + alt + shift - 3 : yabai -m window --space 3
ctrl + alt + shift - 4 : yabai -m window --space 4
ctrl + alt + shift - 5 : yabai -m window --space 5

# swap windows
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east
